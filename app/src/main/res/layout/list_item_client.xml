<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/client_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/inactive_icon"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Jane Doe"/>

    <ImageView
        android:id="@+id/inactive_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/delete_client_button"
        android:padding="12dp"
        android:src="@drawable/ic_inactive"/>

    <ImageButton
        android:id="@+id/delete_client_button"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_delete"/>

</RelativeLayout>